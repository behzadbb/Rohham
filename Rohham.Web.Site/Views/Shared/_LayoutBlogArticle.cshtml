                                </ul>
                            </div>
                        </section>

                        @await Component.InvokeAsync("Categories")

                        <section class="widget widget_meta">
                            <h3 class="widget-title">متا</h3>
                            <div class="post-wrap">
                                <ul>
                                    <li><a href="log-in.html">ورود</a></li>
                                    <li><a href="#">ورودی <abbr title="Really Simple Syndication">خوراک</abbr></a></li>
                                    <li><a href="#">نظرات <abbr title="Really Simple Syndication">خوراک</abbr></a></li>
                                    <li><a href="#">ثبت نام</a></li>
                                </ul>
                            </div>
                        </section>

                        <section class="widget widget_tag_cloud">
                            <h3 class="widget-title">برچسب ها</h3>
                            <div class="post-wrap">
