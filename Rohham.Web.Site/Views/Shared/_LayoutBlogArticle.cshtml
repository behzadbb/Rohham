                                    <a href="#">حریم خصوصی (1)</a>
                                    <a href="#">تجارت (1)</a>
                                </div>
                            </div>
                        </section>
                    </aside>
                </div>
            </div>
        </div>
    </section>
    <!-- End News Details Area -->
    <!-- Start Footer Top Area -->
   
    @await Html.PartialAsync("~/Views/Component/_Footer.cshtml")
    <!-- End Go Top Area -->
