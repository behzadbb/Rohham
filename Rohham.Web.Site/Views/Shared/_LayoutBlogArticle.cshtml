<!doctype html>
<html lang="fa-IR" dir="rtl">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <title>@ViewData["Title"] - فرهیختگان هوشمند رهام</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="keywords" content="@ViewData["KeyWords"]">
    <meta name="description" content="@ViewData["Description"]">
    <meta name="author" content="Behzad Bagheri Behrouz">

    <link rel="stylesheet" href="~/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/boxicons.min.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/meanmenu.min.css">
    <link rel="stylesheet" href="~/css/nice-select.min.css">
    <link rel="stylesheet" href="~/css/odometer.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/responsive.css">
    <link rel="stylesheet" href="~/css/rtl.css">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/img/favicon.png">

</head>

<body>
    <!-- Start Preloader Area -->
    <div class="preloader">
        <div class="lds-ripple">
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- End Preloader Area -->
    <!-- Start Arduix Navbar Area -->
    @await Html.PartialAsync("~/Views/Component/_Navbar.cshtml")
    <!-- End Arduix Navbar Area -->
    <!-- Start Page Title Area -->
    <div class="page-title-area">
        <div class="container">
            <div class="page-title-content">
                <h2>اخبار جداگانه</h2>
                <ul>
                    <li>
                        <a href="~">
                            صفحه اصلی
                        </a>
                    </li>
                    <li>صفحات</li>
                    <li>اخبار جداگانه</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->
    <!-- Start News Details Area -->
    <section class="news-details-area ptb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12">
                    @RenderBody()
                </div>

                <div class="col-lg-4 col-md-12">
                    <aside class="widget-area" id="secondary">
                        <div class="widget widget_search">
                            <h3 class="widget-title">جستجو کن</h3>
                            <div class="post-wrap">
                                <form class="search-form">
                                    <label>
                                        <span class="screen-reader-text">جستجو:</span>
