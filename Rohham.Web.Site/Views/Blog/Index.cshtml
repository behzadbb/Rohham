@model BlogVM
@{
    ViewData["Title"] = "بلاگ";
    ViewData["Description"] = "اخبار و تازه ها";
    ViewData["KeyWords"] = "هوش مصنوعی";
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
}

<div class="row">
    @foreach (var article in Model.Articles)
    {
        <div class="col-lg-4 col-md-6">
            <div class="single-news">
                <div class="blog-img">
                    <a href="news-details.html">
                        <img src="~/img/blog/1.png" alt="@article.Title">
                    </a>
                    <div class="dates">
                        <span>@article.RegisterDate</span>
                    </div>
                </div>
                <div class="news-content-wrap">
                    <ul>
                        <li>
                            <a href="#">
                                <i class="flaticon-user"></i>
                                @article.User.Username
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="flaticon-conversation"></i>
                                نظر
                            </a>
                        </li>
                    </ul>
                    <a href="news-details.html">
                        <h3>@article.Title</h3>
                    </a>
                    <p>@article.Description</p>
                    <a class="read-more" href="/a/@article.Id">
                        ادامه خواندن
                        <i class="bx bx-plus"></i>
                    </a>
                </div>
            </div>
        </div>

    }
